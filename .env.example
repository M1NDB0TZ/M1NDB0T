# MindBot Environment Configuration
# Copy this file to .env and fill in your actual API keys

# =============================================================================
# REQUIRED API KEYS
# =============================================================================

# OpenAI API Key (for LLM - GPT models)
# Get yours at: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Deepgram API Key (for Speech-to-Text)
# Get yours at: https://console.deepgram.com/
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# ElevenLabs API Key (for Text-to-Speech)
# Get yours at: https://elevenlabs.io/
ELEVEN_API_KEY=your_elevenlabs_api_key_here

# =============================================================================
# LIVEKIT CONNECTION (Required for production)
# =============================================================================

# LiveKit Server URL
# For LiveKit Cloud: wss://your-project.livekit.cloud
# For self-hosted: ws://your-server:7880 or wss://your-server:7881
LIVEKIT_URL=your_livekit_url_here

# LiveKit API Credentials
# Get these from your LiveKit project dashboard
LIVEKIT_API_KEY=your_livekit_api_key_here
LIVEKIT_API_SECRET=your_livekit_api_secret_here

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Enable detailed metrics logging (true/false)
ENABLE_METRICS=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable development mode features (true/false)
DEV_MODE=false

# Hot reload for development (true/false)
HOT_RELOAD=false